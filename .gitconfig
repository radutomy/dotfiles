[user]
	name = Radu T
	email = radu@rtom.dev
	signingkey = /root/.ssh/id_ed25519
[init]
	defaultBranch = main

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true    # use n and N to move between diff sections
	line-numbers = true
	; side-by-side = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[credential]
    helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe
[gpg]
	format = ssh
[commit]
	gpgsign = true
[tag]
	gpgsign = true
